@model MantenedorCRUD.Models.ViewModels.RegistrarViewModel
@{
    ViewBag.Title = "Registrar";
}

<h2>@ViewBag.Title</h2>



@*d*@
@using (Html.BeginForm("Registrar", "Empleado", FormMethod.Post, new { enctype = "multipart/form-data" }))
{


    <div class="card">
        <div class="card-header">
            <h4>Registro de Usuarios</h4>
        </div>
        <div class="card-body">
            <form class="form" role="form" autocomplete="off">
                
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">ID</label>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(d => d.EmpleadoID, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Rut</label>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(d => d.rut, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Nombre</label>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(d => d.pnombre, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Apellido Paterno</label>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(d => d.apaterno, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Apellido Materno</label>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(d => d.amaterno, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Fecha de Nacimiento</label>
                    <div class="col-lg-9">
                        @Html.EditorFor(d => d.fec_nac, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Años de experiencia</label>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(d => d.annos_xp, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Teléfono</label>
                    <div class="col-lg-9" style="">
                        @Html.TextBoxFor(d => d.telefono, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Género</label>
                    <div class="col-lg-9">
                        <div data-role="radio">

                            @Html.RadioButtonFor(d => d.genero, "Masculino", new { @syle = "margin: 1em 1em 1em 0;transform: scale(1.1, 1.1);-moz-transform: scale(1.1, 1.1);-ms-transform: scale(1.1, 1.1);-webkit-transform: scale(1.1, 1.1);-o-transform: scale(1.1, 1.1);" })@Html.Label(" Masculino")
                            @Html.RadioButtonFor(d => d.genero, "Femenino", new { @syle = "margin: 1em 1em 1em 0;transform: scale(1.1, 1.1);-moz-transform: scale(1.1, 1.1);-ms-transform: scale(1.1, 1.1);-webkit-transform: scale(1.1, 1.1);-o-transform: scale(1.1, 1.1);" })@Html.Label(" Femenino")
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Dirección</label>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(d => d.direccion, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Email</label>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(d => d.email, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Nombre Profesión</label>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(d => d.n_profesion, "", new { @class = "form-control" })<br/>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label form-control-label">Foto</label>
                        <div class="col-lg-9" style="text-align:justify;">
                            <input type="file" name="imageload" style="padding-bottom:5px;" />
                            @Html.ValidationMessageFor(d => d.foto, "", new { @class = "text-danger" })
                        </div>

                        
                           
                            

                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12 text-center">
                            <input type="reset" class="btn btn-secondary" value="Cancel">
                            <input value="Guardar" class="btn btn-primary" type="submit" />

                        </div>
                    </div>
</form>
        </div>
    </div>


    


    
    

   



}


