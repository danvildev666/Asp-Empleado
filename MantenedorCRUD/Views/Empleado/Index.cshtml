
    @model List<MantenedorCRUD.Models.ViewModels.ListaEmpleadoViewModel>
    @{
        ViewBag.Title = "Datos Empleados";

    }

    <h2>@ViewBag.Title</h2>

    <body style="background-image: url(/img/bg.jpg); width:100%; height:100%;background-attachment:fixed;background-size:cover;">


        @*PjsssjruebaGit*@
        @*otroCffssdamdbio*@ @*PruebaGit*@
        @*otroCddaddmbddddiodv2*@


        <div class="container">
            <div class="mx-auto col-xl-15 main-section">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="list" role="tabpanel" aria-labelledby="list-tab">
                        <div class="card" style="width:75rem;">
                            <div class="card-header">



                                <div class="border-bottom" style="text-align:right;padding:7px;">

                                    <a href="/Empleado/Registrar" class="btn btn-primary">Registrar</a>

                                </div>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="userList" class="table table-bordered table-hover table-striped">
                                        <thead class="thead-light">

                                            <tr>
                                                <th scope="col">ID</th>
                                                <th scope="col">Rut</th>
                                                <th scope="col">Nombre</th>
                                                <th scope="col">Apellido Paterno</th>
                                                <th scope="col">Apellido Materno</th>
                                                <th scope="col">Email</th>
                                                <th scope="col">Genero</th>
                                                <th scope="col">Fecha Nacimiento</th>
                                                <th scope="col">Años de experiencia</th>
                                                <th scope="col">Dirección</th>
                                                <th scope="col">Nombre Profesion</th>
                                                <th scope="col">Teléfono</th>
                                                <th scope="col">Foto</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var oElemento in Model)
                                            {
                                                <tr>
                                                    <td> @oElemento.EmpleadoID</td>
                                                    <td> @oElemento.rut</td>
                                                    <td> @oElemento.pnombre</td>
                                                    <td> @oElemento.apaterno</td>
                                                    <td> @oElemento.amaterno</td>
                                                    <td> @oElemento.email</td>
                                                    <td> @oElemento.genero</td>
                                                    <td> @oElemento.fec_nac.ToString("dd/MM/yyyy")</td>
                                                    <td> @oElemento.annos_xp</td>
                                                    <td> @oElemento.direccion</td>
                                                    <td> @oElemento.n_profesion</td>
                                                    <td> @oElemento.telefono</td>
                                                    <td> @oElemento.foto</td>

                                                    <td>

                                                        <a class="btn btn-outline-info" href="~/Empleado/Editar/@oElemento.EmpleadoID">Editar</a>
                                                        <a class="btn btn-danger " href="~/Empleado/Eliminar/@oElemento.EmpleadoID">Eliminar</a>

                                                    </td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>


    </body>
