

@model List<MantenedorCRUD.Models.ViewModels.InformacionEmpleadoViewModel>
@{
    ViewBag.Title = "Informacion Empleados";

}

<h2>@ViewBag.Title</h2>

<!-- Los iconos tipo Solid de Fontawesome-->
<link rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.0.8/css/solid.css">
<script src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

<link href="@Url.Content("~/Content/user-form.css")" rel="stylesheet" type="text/css" />


<body>


  

    <div class="container">
        <div class="mx-auto col-xl-15 main-section">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="list" role="tabpanel" aria-labelledby="list-tab">
                    <div class="card" style="width:75rem;">
                        <div class="card-header">


                            <div class="border-bottom" style="text-align:right;padding:3px;">


                                <a href="~/Empleado/" class="btn btn-link" title="Atras" style="text-align:right;padding:3px" ; data-toggle="tooltip"><i class="material-icons">navigate_before</i></a>
                                <a href="~/Empleado/registrarInformacion" class="btn btn-success" title="Registrar Informacion" style="text-align:right;padding:3px" ; data-toggle="tooltip"><i class="material-icons">&#xE147;</i>Registrar Nuevo</a>



                            </div>
                            
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="userList" class="table table-bordered table-hover table-striped">
                                    <thead class="thead-light">

                                        <tr>

                                            <th scope="col">Valor Hora</th>
                                            <th scope="col">valor Hora Extra</th>
                                            <th scope="col">Años De Antiguedad</th>
                                            <th scope="col">Isapre</th>
                                            <th scope="col">Afp</th>
                                            <th scope="col">Cargas Familiares</th>
                                            <th scope="col">Sueldo Bruto</th>
                                            <th scope="col">Sueldo Liquido</th>
                                            <th scope="col">Indemnizacion</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var oInformacion in Model)
                                        {
                                            <tr>
                                                <td> @oInformacion.valor_hora</td>
                                                <td> @oInformacion.valor_ex</td>
                                                <td> @oInformacion.antiguedad</td>
                                                <td> @oInformacion.isapre</td>
                                                <td> @oInformacion.afp</td>
                                                <td> @oInformacion.cargas_fam</td>
                                                <td> @oInformacion.sueldo_bruto</td>
                                                <td> @oInformacion.sueldo_liquido</td>
                                                <td> @oInformacion.indemnizacion</td>


                                                <td>

                                                    <a class="btn btn-outline-info" href="~/Empleado/Editar/@oInformacion.EmpleadoID">Editar</a>
                                                    <a class="btn btn-danger " href="~/Empleado/Eliminar/@oInformacion.EmpleadoID">Eliminar</a>

                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
