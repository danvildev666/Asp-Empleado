@model MantenedorCRUD.Models.ViewModels.InformacionEmpleadoViewModel
@{
    ViewBag.Title = "Registrar Informacion";
}

<h2>@ViewBag.Title</h2>

<!-- Los iconos tipo Solid de Fontawesome-->
<link rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.0.8/css/solid.css">
<script src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

<link href="@Url.Content("~/Content/user-form.css")" rel="stylesheet" type="text/css" />


@using (Html.BeginForm("RegistrarInformacion", "Empleado", FormMethod.Post, new { enctype = "multipart/form-data" }))
{


    <div class="card">
        <div class="card-header">
            <h4>Informacion Detallada</h4>
        </div>
        <div class="card-body">
            <form class="form" role="form" autocomplete="off">

                <div class="form-group row">
                    @Html.HiddenFor(d => d.EmpleadoID)
                    <label class="col-lg-3 col-form-label form-control-label">ID</label>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(d => d.EmpleadoID, "", new { @class = "form-control" })
                    </div>

                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Rut</label>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(d => d.afp, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Nombre</label>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(d => d.antiguedad, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Apellido Paterno</label>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(d => d.cargas_fam, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Apellido Materno</label>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(d => d.indemnizacion, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Fecha de Nacimiento</label>
                    <div class="col-lg-9">
                        @Html.EditorFor(d => d.isapre, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Años de experiencia</label>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(d => d.sueldo_bruto, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Teléfono</label>
                    <div class="col-lg-9" style="">
                        @Html.TextBoxFor(d => d.sueldo_liquido, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Género</label>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(d => d.valor_ex, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Dirección</label>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(d => d.valor_hora, "", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">Email</label>
                    <div class="col-lg-9">
                        @Html.TextBoxFor(d => d.ParametrosID, "", new { @class = "form-control" })
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-lg-12 text-center">
                        <input type="reset" class="btn btn-secondary" value="Cancel">
                        <input value="Guardar" class="btn btn-primary" type="submit" />

                    </div>
                </div>
            </form>
    </div>
    
    </div>











}



